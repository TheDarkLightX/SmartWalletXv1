# SecureWallet Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development
SESSION_SECRET=your-secure-session-secret

# API Keys (required for production)
OPENAI_API_KEY=your-openai-api-key
INFURA_KEY=your-infura-key
ALCHEMY_KEY=your-alchemy-key

# Blockchain RPC Endpoints
# Add your own RPC endpoints for the blockchains you want to support
ETH_MAINNET_RPC=https://mainnet.infura.io/v3/your-infura-key
PULSE_MAINNET_RPC=https://rpc.pulsechain.com
ETH_TESTNET_RPC=https://sepolia.infura.io/v3/your-infura-key
PULSE_TESTNET_RPC=https://rpc-testnet.pulsechain.com

# Security Settings
CSRF_SECRET=your-csrf-secret
REQUIRE_TWO_FACTOR=false
HARDWARE_WALLET_REQUIRED=false

# Tokenomics Configuration
DEVELOPER_FUND_ADDRESS=0x3bE00923dF0D7fb06f79fc0628525b855797d8F8
FEE_PERCENTAGE=0.002
DEVELOPER_FUND_PERCENTAGE=0.25
BUY_BURN_PERCENTAGE=0.75

# Premium Features
FEATURE_ENHANCED_PRIVACY=true
FEATURE_AI_TRADING=true
FEATURE_PRIORITY_TX=true
FEATURE_CUSTOM_ALERTS=true
FEATURE_MULTICHAIN_TX=false  # Feature in development

# Frontend Configuration
VITE_APP_NAME="SecureWallet"
VITE_DEFAULT_CHAIN="pulse"  # or "ethereum"
VITE_API_URL=/api